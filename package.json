{
    "name": "data-pixel",
    "license": "MIT",
    "workspaces": [
        "packages/*",
        "src/**"
    ],
    "private": true,
    "scripts": {
        "clean": "lerna run clean --stream --parallel",
        "build": "lerna run build --stream --parallel",
        "lerna:start": "lerna run start",
        "lerna:bootstrap": "lerna bootstrap",
        "lerna:create": "lerna create data-pixel-influx packages/",
        "build:web": "yarn workspace @data-pixel/data-pixel-web build",
        "build:api": "yarn workspace @data-pixel/data-pixel-api build",
        "build:broker": "yarn workspace @data-pixel/data-pixel-broker build",
        "build:docs": "yarn workspace @data-pixel/data-pixel-docs build"
    },
    "devDependencies": {
        "@vue/cli-plugin-eslint": "^4.5.8",
        "@vue/cli-plugin-typescript": "^4.5.8",
        "commitizen": "^4.2.2",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^4.3.0",
        "lerna": "^3.22.1"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
    }
}
